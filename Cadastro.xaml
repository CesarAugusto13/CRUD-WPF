<Window x:Class="TesteJunior.Cadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesteJunior"
        mc:Ignorable="d"
        Title="Cadastro" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Nome do Produto:" Margin="10"/>
            <TextBox Name="txtNomeProduto" Margin="10"/>

            <TextBlock Text="Preço Custo:" Margin="10"/>
            <TextBox Name="txtPrecoCusto" Margin="10"/>

            <TextBlock Text="Preço Venda:" Margin="10"/>
            <TextBox Name="txtPrecoVenda" Margin="10"/>

            <TextBlock Text="Grupo:" Margin="10"/>
            <ComboBox Name="cmbGrupo" Margin="10"/>

            <TextBlock Text="Ativo:" Margin="10"/>
            <CheckBox Name="chkAtivo" Margin="10"/>

            <Button Name="btnCadastrar" Content="Cadastrar Produto" Margin="10" Click="btnCadastrar_Click"/>
            <Button Name="btnEditar" Content="Editar Produto" Margin="10" Click="btnEditar_Click"/>
        </StackPanel>
    </Grid>
</Window>
